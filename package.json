{
  "name": "ngx-dayjs",
  "version": "1.0.0",
  "description": "dayjs pipes for Angular",
  "main": "dist/ngx-dayjs/esm5/ngx-dayjs.js",
  "scripts": {
    "build": "ng build",
    "test": "ng lint && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk --inspect ./node_modules/jest/bin/jest.js --runInBand",
    "prepublish": "ng build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljmerza/ngx-dayjs.git"
  },
  "keywords": [
    "angular",
    "daysjs"
  ],
  "author": "Leonardo Merza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ljmerza/ngx-dayjs/issues"
  },
  "homepage": "https://github.com/ljmerza/ngx-dayjs#readme",
  "peerDependencies": {
    "@angular/common": ">=2.0.0 <7.0.0",
    "@angular/core": ">=2.0.0 <7.0.0"
  },
  "dependencies": {
    "dayjs": "^1.5.15"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.5.0",
    "@angular-devkit/build-ng-packagr": "~0.5.0",
    "@angular/cli": "~6.0.0-rc.3",
    "@angular/common": "^6.0.0-rc.3",
    "@angular/compiler": "^6.0.0-rc.3",
    "@angular/compiler-cli": "^6.0.0-rc.3",
    "@angular/core": "^6.0.0-rc.3",
    "@angular/language-service": "^6.0.0-rc.1",
    "@angular/platform-browser": "^6.0.0-rc.3",
    "@types/jest": "^22.2.3",
    "core-js": "^2.5.4",
    "jest": "^22.4.3",
    "ng-packagr": "^2.4.1",
    "rxjs": "^6.0.0-rc.0",
    "ts-jest": "^22.4.2",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "zone.js": "^0.8.24"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.spec\\.ts$"
  }
}
